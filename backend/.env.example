# Server Configuration
PORT=3000
NODE_ENV=development
HTTPS_ENABLED=false

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/telegram_shop

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# BlockCypher API (BTC, LTC webhooks)
BLOCKCYPHER_API_KEY=your-blockcypher-token-here
BLOCKCYPHER_WEBHOOK_URL=https://your-domain.com/webhooks/blockcypher?token=your-random-secret-here
BLOCKCYPHER_WEBHOOK_SECRET=your-random-secret-here

# Etherscan API (ETH, USDT ERC-20 polling)
ETHERSCAN_API_KEY=your-etherscan-api-key-here

# TronGrid API (USDT TRC-20 polling)
TRONGRID_API_KEY=your-trongrid-api-key-here

# HD Wallet xpub keys (watch-only, safe to store on server)
# Generate using BIP39 tools: https://iancoleman.io/bip39/
# IMPORTANT: Never store mnemonic (24 words) in .env!
HD_XPUB_BTC=xpub6...your-btc-xpub
HD_XPUB_ETH=xpub6...your-eth-xpub
HD_XPUB_LTC=xpub6...your-ltc-xpub
HD_XPUB_TRON=xpub6...your-tron-xpub

# Confirmation thresholds (balanced mode)
CONFIRMATIONS_BTC=3
CONFIRMATIONS_LTC=3
CONFIRMATIONS_ETH=3
CONFIRMATIONS_TRON=1

# Shop Registration
SHOP_REGISTRATION_COST=25

# CORS
FRONTEND_URL=https://your-webapp-url.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
