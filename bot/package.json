{
  "name": "telegram-shop-bot",
  "version": "1.0.0",
  "description": "Status Stock E-commerce Telegram Bot",
  "type": "module",
  "main": "src/bot.js",
  "scripts": {
    "start": "node src/bot.js",
    "dev": "nodemon src/bot.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e",
    "test:lint:bot": "node tools/lint-callbacks-ack.js && node tools/lint-webapp-links.js",
    "lint:clean-chat": "node tools/cleanChatLinter.js",
    "test:ci": "npm run test:lint:bot && npm run lint:clean-chat && npm test",
    "lint": "eslint src/ tests/ --fix",
    "lint:check": "eslint src/ tests/",
    "test:all": "npm run lint:check && npm run lint:clean-chat && npm test"
  },
  "keywords": [
    "telegram",
    "bot",
    "e-commerce",
    "crypto"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "openai": "^6.6.0",
    "qrcode": "^1.5.4",
    "telegraf": "^4.15.0",
    "validator": "^13.15.15",
    "wallet-validator": "^0.3.18",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@jest/globals": "^29.7.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.38.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "telegraf-test": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
